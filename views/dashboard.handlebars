<section class="new-post col-md-8">

  <form class="new-post-form">
  <h2>Create New Post</h2>
    <div class="form-group">
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" class="form-control" />
    </div>
    <div class="form-group">
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" class="form-control" />
    </div>
    <button type="submit" class="new-post-form btn btn-info text-white">Create</button>
  </form>

{{#if posts.length}}

  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-light text-info">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>