<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Old-Fashioned | Home</title>
  </head>
  <body>

    <header>
      <nav class="nav">
        <a class="Old-Fashioned" href="/">Old-Fashioned | Bar</a>
        {{#if loggedIn}}
          <a href="/logout">logout</a>
        {{else}}
          <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>

    <div class="container" align="center">
      <div class="modal-content">
        <h5 class="modal-title">Choose an Option</h5>
        <div class="modal-body">
          <a href="/gin" class="btn btn-outline-dark ginBtn">Gin</a>
          <a href="/vodka" class="btn btn-outline-dark VodkaBtn">Vodka</a>
          <a href="/bourbon" class="btn btn-outline-dark BourbonBtn">Bourbon</a>
          <a href="/tequila" class="btn btn-outline-dark TequilaBtn">Tequila</a>
          <br />
          <a href="/create" class="btn btn-outline-dark createBtn">Create your
            own drink</a>
        </div>
      </div>
    </div>
    {{#if loggedIn}}
      <script src="../public/javascript/logout.js"></script>
    {{/if}}
  </body>
</html>