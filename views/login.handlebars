    />
    <title>Old-Fashioned | Login</title>
  </head>
  <body>
    <nav class="nav">
      <a class="Old-Fashioned" href="/index">Old-Fashioned | Bar</a>
      <a href="/gin" class="btn ginBtn">Gin</a>
      <a href="/vodka" class="btn VodkaBtn">Vodka</a>
      <a href="/bourbon" class="btn BourbonBtn">Bourbon</a>
      <a href="/tequila" class="btn TequilaBtn">Tequila</a>
    </nav>

    <section class="d-flex justify-content-center">
    <form class="form col-md-5">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input type="text" id="email-login" class="form-control" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input type="password" id="password-login" class="form-control" />
      </div>
      <div class="form-group">
        <button
          type="submit"
          class="form-control btn btn-primary"
        >login</button>
      </div>
    </form>

    <form class="signup-form form col-md-5">
      <div class="form-group">
        <label for="username-signup">username:</label>
        <input type="text" id="username-signup" class="form-control" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input type="text" id="email-signup" class="form-control" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input type="password" id="password-signup" class="form-control" />
      </div>
      <div class="form-group">
        <button
          type="submit"
          class="form-control btn btn-primary"
        >signup</button>
      </div>
    </form>
</section>
    <script src="/javascript/login.js"></script>

  </body>
</html>